---
import Layout from "../layouts/Layout.astro";
import { CheckCircle, ArrowLeft } from "@lucide/astro";
---

<Layout>
  <main class="min-h-screen flex items-center justify-center">
    <div class="max-w-md text-center space-y-6">
      <div class="flex justify-center">
        <CheckCircle size={64} class="text-accent" />
      </div>

      <h1 class="text-2xl font-semibold">¡Correo enviado correctamente!</h1>
      <p class="text-muted text-sm">
        Gracias por ponerte en contacto. Te responderé lo antes posible.
      </p>

      <a href="/" class="flex items-center gap-2 mx-auto w-fit">
        <ArrowLeft size={18} /> Volver al inicio
      </a>
    </div>
  </main>
</Layout>
