---
import translation from "@/locales/es/traductions.json";
import SectionTitle from "../SectionTitle.astro";
---

<section id="projects" class="py-24 px-6 bg-background text-foreground">
  <SectionTitle title={translation.projects.title} />
  <div class="max-w-7xl mx-auto">
    <div class="grid gap-10 md:grid-cols-2 lg:grid-cols-3">
      {
        translation.projects.data.map((project, index) => (
          <div
            class="project-card group relative bg-card border border-muted/10 rounded-2xl shadow-sm hover:shadow-lg transition-all overflow-hidden"
            data-delay={index * 0.2}
          >
            <a href={project.url} target="_blank" rel="noopener noreferrer">
              <img
                src={project.image}
                alt={project.title}
                class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300"
              />

              <div class="p-6 flex flex-col gap-3">
                <h3 class="text-xl font-semibold text-foreground group-hover:text-primary transition-colors">
                  {project.title}
                </h3>
                <p class="text-muted text-sm leading-relaxed">
                  {project.description}
                </p>
              </div>
            </a>
          </div>
        ))
      }
    </div>
  </div>
</section>

<!-- Framer Motion JS Animation -->
<script type="module">
  import { animate } from "https://cdn.skypack.dev/motion";

  const cards = document.querySelectorAll(".project-card");

  cards.forEach((card, i) => {
    const delay = parseFloat(card.dataset.delay) || 0;
    animate(
      card,
      { opacity: [0, 1], y: [40, 0] },
      {
        duration: 0.6,
        delay,
        easing: "ease-out",
      }
    );
  });
</script>
