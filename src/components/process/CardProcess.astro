---
const { title, content, step } = Astro.props;
---

<div
  class="group relative bg-card rounded-2xl p-8 shadow-md hover:shadow-lg transition-all border border-muted/10"
>
  <!-- Step Icon -->
  <div
    class="absolute -top-6 left-1/2 -translate-x-1/2 w-12 h-12 bg-accent text-white flex items-center justify-center rounded-full text-sm font-bold shadow-md group-hover:scale-110 transition-transform"
  >
    0{step}
  </div>

  <div class="pt-10 flex flex-col gap-4 text-center">
    <h3 class="text-xl text-foreground">{title}</h3>
    <p class="text-muted leading-relaxed">{content}</p>
  </div>
</div>
