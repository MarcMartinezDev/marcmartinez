---
import { ArrowDown } from "@lucide/astro";
import HeroImage from "./HeroImage.astro";

const { t } = Astro.props;
---

<!-- Hero Section -->
<div class="lg:min-h-screen py-24 lg:py-0 flex lg:flex-row items-center mx-4">
  <div
    id="hero"
    class="w-full text-center lg:text-left lg:w-1/2 flex flex-col justify-between gap-36"
  >
    <div class="flex flex-col justify-center gap-6">
      <span class="text-sm uppercase tracking-widest text-accent mb-2">
        {t.hero.subtitle}
      </span>

      <h1
        class="text-4xl lg:text-7xl font-heading font-semibold leading-[1.1] uppercase"
      >
        {t.hero.title}
      </h1>

      <p class="text-lg text-muted mt-2">
        {t.hero.content}
      </p>

      <a
        href="#contact"
        class="mt-8 mx-auto lg:mx-0 inline-flex w-fit items-center gap-2 text-base text-accent"
      >
        {t.hero.cta}
        <ArrowDown size={16} class="mt-0.5 animate-bounce" />
      </a>
    </div>
  </div>

  <HeroImage />
</div>

<script type="module">
  import { fromLeft } from "/animations.js";

  const hero = document.querySelector("#hero");
  fromLeft(hero);
</script>
