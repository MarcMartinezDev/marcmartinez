<!-- HeroImage.astro -->
<div class="w-full lg:w-1/2 flex justify-center items-end">
  <img
    src="/images/hero-template.webp"
    alt="Hero image"
    width="800"
    height="800"
    class="hero-img w-full max-w-3xl h-auto object-cover rounded-xl shadow-lg grayscale-50 hover:grayscale-0 blur-md opacity-0 transition-all duration-700"
    style="mask-image: linear-gradient(to bottom, black 90%, transparent 100%); -webkit-mask-image: linear-gradient(to bottom, black 90%, transparent 100%);"
    onload="this.classList.remove('blur-md', 'opacity-0'); this.classList.add('blur-0', 'opacity-100');"
  />
</div>
