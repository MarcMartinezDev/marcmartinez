---
import translation from "@/locales/es/traductions.json";
import CardService from "./CardService.astro";
import SectionTitle from "../SectionTitle.astro";
---

<section id="services">
  <SectionTitle title={translation.services.title} />

  <div class="flex flex-col">
    {
      translation.services.data.map((item) => (
        <div class="group flex py-8 border-b-[1px] border-muted/20 items-center overflow-hidden hover:border-b hover:border-accent/30 hover:bg-accent/5">
          <div class="w-1/3 text-center text-lg text-muted">0{item.id}</div>
          <CardService
            title={item.title}
            content={item.content}
            cta={translation.services.cta}
          />
        </div>
      ))
    }
  </div>
</section>
