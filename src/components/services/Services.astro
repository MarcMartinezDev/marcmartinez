---
import CardService from "./CardService.astro";
import SectionTitle from "../SectionTitle.astro";

const { t } = Astro.props;
---

<section id="services">
  <SectionTitle title={t.services.title} />

  <div class="flex flex-col">
    {
      t.services.data.map(
        (item: { id: number; title: string; content: string }) => (
          <div class="group flex py-8 border-b-[1px] border-muted/20 items-center lg:overflow-hidden lg:hover:border-b lg:hover:border-accent/30 lg:hover:bg-accent/5">
            <div class="hidden lg:block w-1/3 text-center text-lg text-muted">
              0{item.id}
            </div>
            <CardService
              title={item.title}
              content={item.content}
              cta={t.services.cta}
            />
          </div>
        )
      )
    }
  </div>
</section>
