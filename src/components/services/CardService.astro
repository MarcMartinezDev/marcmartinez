---
import { ArrowUpRight } from "@lucide/astro";
const { title, content, cta } = Astro.props;
---

<div class="w-full flex flex-col">
  <h3 class="text-xl text-center mb-4">{title}</h3>
  <div
    class="w-full h-[0px] group-hover:h-[100px] transition-all duration-500 text-center flex flex-col justify-between space-y-5"
  >
    <p
      class="px-10 opacity-0 group-hover:opacity-100 transition-all duration-500 text-muted"
    >
      {content}
    </p>
    <a
      href=""
      class="cta-primary flex gap-1 items-center opacity-0 group-hover:opacity-100 w-fit mx-auto transition-all duration-500"
      >{cta} <span><ArrowUpRight size={18} /></span></a
    >
  </div>
</div>
